<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" method="upgrade" group="content">
	<name>J2Store DJCatalog</name>
	<author>Gokila Priya</author>
	<creationDate>June 2015</creationDate>
	<copyright>Copyright (c) 2010 - 2015 Weblogicx India Private Ltd. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>support@j2store.org</authorEmail>
	<authorUrl>http://j2store.org</authorUrl>
	<version>1.0.0</version>
	<description>PLG_CONTENT_J2STORE_DJCATALAOG_XML_DESCRIPTION</description>
	<scriptfile>script.j2storedjcatalog2.php</scriptfile>
	<files>
		<filename plugin="j2storedjcatalog2">j2storedjcatalog2.php</filename>
		<filename>index.html</filename>		
	</files>
	<config>
	<fields name="params">
		<fieldset name="basic" label="J2STORE_CONTENT_BASIC">
		</fieldset>
		<fieldset name="categoryview" label="J2STORE_CONTENT_CATEGORY_LIST_VIEW">
			<field name="category_product_options" type="list" default="1" 
			label="J2STORE_CONTENT_PRODUCT_OPTIONS_DISPLAY" 
			description="J2STORE_CONTENT_PRODUCT_OPTIONS_DISPLAY_DESC">
	          <option value="1">J2STORE_CONTENT_DISPLAY_PRODUCT_OPTIONS</option>
	          <option value="2">J2STORE_CONTENT_REDIRECT_TO_DETAIL_PAGE</option>          
	        </field>   
	             
	        <field name="category_display_j2store_images" type="radio" class="btn-group" default="1" 
			label="J2STORE_CONTENT_DISPLAY_J2STORE_IMAGES" 
			description="J2STORE_CONTENT_DISPLAY_J2STORE_IMAGES_DESC">
	          <option value="1">JYES</option>
	          <option value="0">JNO</option>	          
	        </field>
	        
	          <field name="category_enable_image_zoom" type="radio" class="btn-group" default="1" 
			label="J2STORE_PRODUCT_ENABLE_IMAGE_ZOOM_EFFECTS" 
			description="J2STORE_PRODUCT_ENABLE_IMAGE_ZOOM_EFFECTS">	          
	          <option value="0">JNO</option>
	          <option value="1">JYES</option>
	        </field>
	        
	        <field name="category_image_type" type="list" default="bottom" 
			label="J2STORE_CONTENT_IMAGE_TYPE" 
			description="J2STORE_CONTENT_IMAGE_TYPE_DESC">
	          <option value="thumbnail">J2STORE_CONTENT_THUMBNAIL_IMAGE</option>
	          <option value="main">J2STORE_CONTENT_MAIN_IMAGE</option>
	          <option value="mainadditional">J2STORE_CONTENT_BOTH_MAIN_AND_ADDITIONAL_IMAGES</option>
	        </field>
	          <field name="list_image_thumbnail_width" type="text" default="120"
				class="btn-group" label="J2STORE_PRODUCT_THUMBNAIL_IMAGE_WIDTH_LABEL"
				/>
				
				<field name="list_product_additional_image_width" type="text" default="80"
				 label="J2STORE_PRODUCT_ADDITIONAL_IMAGE_WIDTH" />
	        
		</fieldset>
		
		<fieldset name="itemview" label="J2STORE_CONTENT_ITEM_VIEW">
		    <!--  <field name="item_product_block_position" type="list" default="bottom" 
			label="J2STORE_CONTENT_PRODUCT_BLOCK_POSITION" 
			description="J2STORE_CONTENT_PRODUCT_BLOCK_POSITION_DESC">
	          <option value="top">J2STORE_CONTENT_PRODUCT_POSITION_TOP</option>
	          <option value="bottom">J2STORE_CONTENT_PRODUCT_POSITION_BOTTOM</option>          
	        </field> -->
	        
	          <field name="item_display_j2store_images" type="radio" class="btn-group" default="1" 
			label="J2STORE_CONTENT_DISPLAY_J2STORE_IMAGES" 
			description="J2STORE_CONTENT_DISPLAY_J2STORE_IMAGES_DESC">
	          <option value="1">JYES</option>
	          <option value="0">JNO</option>	          
	        </field>       
	         
	        
	        <field name="item_image_type" type="list" default="main" 
			label="J2STORE_CONTENT_IMAGE_TYPE" 
			description="J2STORE_CONTENT_IMAGE_TYPE_DESC">	          
	          <option value="main">J2STORE_CONTENT_MAIN_IMAGE</option>
	          <option value="mainadditional">J2STORE_CONTENT_BOTH_MAIN_AND_ADDITIONAL_IMAGES</option>
	        </field>
	        
	        <field name="item_enable_image_zoom" type="radio" class="btn-group" default="1" 
			label="J2STORE_PRODUCT_ENABLE_IMAGE_ZOOM_EFFECTS" 
			description="J2STORE_PRODUCT_ENABLE_IMAGE_ZOOM_EFFECTS">	          
	          <option value="0">JNO</option>
	          <option value="1">JYES</option>
	        </field>
	        
	        	<field name="item_product_main_image_width" type="text" class="btn-group"
				label="J2STORE_PRODUCT_MAIN_IMAGE_WIDTH" />

			<field name="item_product_additional_image_width" type="text"
				default="100" label="J2STORE_PRODUCT_ADDITIONAL_IMAGE_WIDTH" />
	        	        	        	
		</fieldset>
		
	</fields>
</config>  	
</extension>
