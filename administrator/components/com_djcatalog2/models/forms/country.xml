<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" 
				readonly="true" class="readonly" />
		
		<field name="country_name" type="text" class="inputbox"
				size="40" label="COM_DJCATALOG2_NAME"
				description="COM_DJCATALOG2_NAME" required="true" />
		
		<field name="country_3_code" type="text" class="inputbox"
			size="40" label="COM_DJCATALOG2_COUNTRY_CODE_3"
			description="COM_DJCATALOG2_COUNTRY_CODE_3" maxlength="3" required="true"  />
		
		<field name="country_2_code" type="text" class="inputbox"
			size="40" label="COM_DJCATALOG2_COUNTRY_CODE_2"
			description="COM_DJCATALOG2_COUNTRY_CODE_2" maxlength="2" required="true" />
		
		<field
			name="published"
			type="list"
			label="COM_DJCATALOG2_PUBLISHED"
			description="COM_DJCATALOG2_PUBLISHED"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
		</field>
		
		<field name="is_default" type="list" label="COM_DJCATALOG2_DEFAULT"
			description="COM_DJCATALOG2_DEFAULT" class="inputbox" size="1"
			default="0">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field name="is_eu" type="list" label="COM_DJCATALOG2_IS_EU"
			description="COM_DJCATALOG2_IS_EU" class="inputbox" size="1"
			default="0">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
	</fieldset>
</form>
